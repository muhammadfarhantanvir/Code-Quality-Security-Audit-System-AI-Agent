# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CITATION.cff

# Include configuration
recursive-include config *.yaml *.yml

# Include documentation
recursive-include docs *.md

# Include scripts
recursive-include scripts *.sh *.bat

# Include assets
recursive-include assets *.png *.jpg *.py

# Include tests
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude Makefile
exclude *.db
exclude DEPLOYMENT_CHECKLIST.md
exclude ORGANIZATION_SUMMARY.md
exclude PROJECT_STRUCTURE.md

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so